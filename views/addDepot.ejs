<% var Role = User.Role %>
<script type="text/javascript">
    var imageUploaded = false;
    var image = null;
    let role = "<%= Role %>";
    var permission = {
        Admin : [],
        Manager: ['staffid'],
        Driver: ['staffid', 'role']
    }
   


    $(document).ready(function () {

        $("button.apply").click(function () {
            let depot = {};
            depot.Name = $("#name").val();
            depot.Address = $("#address").val();
            depot.CompanyID = 1;
                $.post("/addDepot", depot, function(data){
                    //console.log(data);
                    if(data.success){
                            console.log("success");
                            location.href = "/dumpster/" + data.sensor.SensorID;
                    }else{
                        console.log(data.error);
                        $(".error-message").text(data.error);
                    }
                    
                });
            
        
        });

        $("button.cancel").click(function () {
            location.reload(true);
        });

        




    });

</script>

<body>


    <div class="header">
        <h1 class="title"> Dumpster FIRE </h1>
